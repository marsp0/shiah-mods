<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- <Script File="debuf_watch.lua"/> -->
    <Frame name="SingleDebuffWatchFrame" virtual="true">
        <Size> <AbsDimension x="40" y="40" /> </Size>
        <Layers>
            <Layer level="OVERLAY">
                <Texture name="$parentTexture">
                    <TexCoords left="0" right="1" top="0" bottom="1"/>
                </Texture>
                <FontString name="$parentCooldown" inherits="NumberFontNormalSmall" justifyH="RIGHT">
					<Anchors>
						<Anchor point="BOTTOMLEFT"><Offset> <AbsDimension x="5" y="5"/></Offset></Anchor>
					</Anchors>
				</FontString>
                <FontString name="$parentStacks" inherits="NumberFontNormalSmall" justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPRIGHT"><Offset> <AbsDimension x="-5" y="-5"/></Offset></Anchor>
					</Anchors>
				</FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="DebuffWatchFrame" virtual="false" toplevel="true" enableMouse="true" movable="true">
        <Size> <AbsDimension x="160" y="40" /> </Size>
        <Anchors><Anchor point="CENTER"><Offset><AbsDimension x="0" y="-30" /></Offset></Anchor></Anchors>
        <Frames>
            <Frame name="$parent11" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="0" y="0" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent12" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="40" y="0" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent13" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="80" y="0" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent14" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="120" y="0" /></Offset></Anchor></Anchors>
            </Frame>
            
            <Frame name="$parent21" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="0" y="-40" /></Offset></Anchor></Anchors>
            </Frame>
            
            <Frame name="$parent31" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="0" y="-80" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent32" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="40" y="-80" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent33" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="80" y="-80" /></Offset></Anchor></Anchors>
            </Frame>
            
            <Frame name="$parent41" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="0" y="-120" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent42" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="40" y="-120" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent43" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="80" y="-120" /></Offset></Anchor></Anchors>
            </Frame>

            <Frame name="$parent51" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="0" y="-160" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent52" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="40" y="-160" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent53" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="80" y="-160" /></Offset></Anchor></Anchors>
            </Frame>
            <Frame name="$parent54" inherits="SingleDebuffWatchFrame">
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="120" y="-160" /></Offset></Anchor></Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                self:RegisterEvent("ADDON_LOADED")
                if LoggingCombat() then self:Show() else self:Hide() end
            </OnLoad>
            <OnEvent>
                if event == "ADDON_LOADED" then
                    local name = ...
                    if name ~= "ShiahMods" then return end
                    debuff_watch_init()
                end
            </OnEvent>
            <OnMouseDown>
				self:StartMoving();
			</OnMouseDown>
			<OnMouseUp>
				self:StopMovingOrSizing();
			</OnMouseUp>
            <OnUpdate>
                debuff_watch_update()
            </OnUpdate>
        </Scripts>
    </Frame>
</Ui>