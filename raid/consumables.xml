<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Frame name="BuffCheckerDebugFrame" virtual="true">
        <Layers>
            <Layer>
                <Texture name="$parentTexture" file="Interface\BUTTONS\WHITE8X8">
                    <TexCoords left="0" right="1" top="0" bottom="1"/>
                    <Color r="0.0" g="0.0" b="0.0" a="0.7"/>
                </Texture>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="BuffChecker" virtual="false" enableMouse="true" movable="true" inherits="BuffCheckerDebugFrame">
        <Size> <AbsDimension x="120" y="180" /> </Size>
        <Anchors><Anchor point="CENTER"><Offset><AbsDimension x="275" y="0" /></Offset></Anchor></Anchors>
        <Frames>
            <EditBox name="$parentId" autoFocus="false" inherits="InputBoxTemplate">
                <Size><AbsDimension x="80" y="20"/> </Size>
                <Anchors><Anchor point="TOPLEFT"><Offset><AbsDimension x="7" y="0" /></Offset></Anchor></Anchors>
                <Scripts><OnEnterPressed>buff_checker_crawl()</OnEnterPressed></Scripts>
            </EditBox >
            <CheckButton name="$parentIsPresent" inherits="ChatConfigCheckButtonTemplate">
                <!-- <Size><AbsDimension x="20" y="20"/> </Size> -->
                <Anchors><Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parentId"/></Anchors>
            </CheckButton>
        </Frames>
        <Layers>
            <Layer>
                <FontString name="$parentNames" inherits="GameFontNormalSmall" justifyH="LEFT" justyfyV="TOP" text="Type (Guild/Raid/Name-Server)">
                    <Size> <AbsDimension x="100" y="155" /></Size>
                    <Anchors><Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="BuffChecker"><Offset x="0" y="-25"/></Anchor></Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
            <OnLoad>
                self:Hide()
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>